<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WhoIsThat.HomePage"
             Padding="60, 5, 60, 30">
    <ContentPage.Content>
        <StackLayout>
            <Button Text="Take Photo!"
                    TextColor="White"
                    BackgroundColor="Black"
                    FontSize="20"
                    Command="{Binding TakePhotoCommand}"></Button>

            <Button Text="View friends"
                    TextColor="White"
                    BackgroundColor="Black"
                    FontSize="20"
                    Command="{Binding NavigateToListPageCommand}"></Button>
            
            <Image Source="{Binding DisplayStream}"></Image>
            <Label Text="{Binding DisplayMessage}"
                   HorizontalOptions="Center"
                   FontSize="30"></Label>
            <Label Text="{Binding DisplayReturnedName}"
                   HorizontalOptions="Center"
                   FontSize="20"></Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>