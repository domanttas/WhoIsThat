<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WhoIsThat.Views.ListPage"
             BackgroundColor="Accent"
             >
    
    
    <ContentPage.Content>
        <ListView Margin="20" BackgroundColor="White" ItemsSource="{Binding People} ">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout  Padding="5,0,5,0" HorizontalOptions="StartAndExpand" Orientation="Horizontal" >
                            <Image Source="{Binding ImageContentUri}" WidthRequest="50" HeightRequest="50"  />
                            <Label Text="{Binding PersonFirstName}" VerticalTextAlignment="Center" FontSize="Small" FontFamily="{StaticResource RegularFont}"/>
                            <Label Text="{Binding PersonLastName}" VerticalTextAlignment="Center" FontSize="Small" FontFamily="{StaticResource RegularFont}"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>
