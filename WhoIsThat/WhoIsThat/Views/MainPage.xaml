<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:WhoIsThat"
             x:Class="WhoIsThat.MainPage"
             Padding="60, 5, 60, 30">

    <StackLayout VerticalOptions="End">

        <Label Text="Who is that?" 
           HorizontalOptions="CenterAndExpand"
           VerticalOptions="EndAndExpand"
           HeightRequest="200"
           FontSize="40"
           TextColor="Black"/>

        <Image Source="baseline_directions_run_black_18dp.png"
               IsVisible="True"
               HorizontalOptions="CenterAndExpand"
               VerticalOptions="CenterAndExpand"
               HeightRequest="200"/>

        <Button
            Text="Sign Up!"
            HorizontalOptions="Fill"
            VerticalOptions="Start"
            Image="baseline_arrow_forward_black_18dp.png"
            Command="{Binding NavigateHomePageCommand}"/>
        
    </StackLayout>

</ContentPage>
